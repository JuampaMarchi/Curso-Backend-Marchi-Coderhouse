<br><br>
<style>
    .form-input {
        width: 100px;
    }
</style>
<div class="d-flex flex-column align-items-center justify-content-center mt-lg-5">
    <div class="d-flex flex-column align-items-center" style="width: auto; min-width: 80%">
        <h1 class="display-5">Listado de Productos</h1>
        <% if (products.length > 0) { %>
            <table class="table table-dark" style="width: auto; min-width: 50%">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Precio</th>
                    </tr>
                </thead>
                <tbody id="table-body">
                <% for(item of products){ %>
                    <form action="/api/cart/addToCart" method="post">
                        <tr>
                            <th scope="row"><%=item.id %></th>
                            <td><input class="form-input" type="text" name="name" value="<%=item.name %>" readonly="true"></td>
                            <td><input class="form-input" type="number" name="qty" value="1"></td>
                            <td><input class="form-input" type="text" name="price" value="<%=item.price %>" readonly="true"></td>
                            <td><input type="submit" value="Agregar a Carrito"></td>
                        </tr>
                    </form>
                <%}%>
                </tbody>
            </table>
        <% }  else { %>
            <p style="background-color: blue;">No hay productos</p>
        <% } %>
    </div>
</div>