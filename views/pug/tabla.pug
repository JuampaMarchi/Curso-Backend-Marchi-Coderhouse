div(class='d-flex flex-column align-items-center mt-lg-5')
    h1="Tabla"
    if products.length > 0
        h1=products.length
        table(class="table table-dark" style="width: auto; min-width: 50%")
            thead
                tr
                    th(scope="col")='#'
                    th(scope="col")='Nombre'
                    th(scope="col")='Precio'
            tbody 
                each element in products
                    tr
                        th(scope="row")=element.id
                        td=element.name 
                        td=element.price 
    else 
        p(style='background-color: green')='El listado de productos esta vacio'
